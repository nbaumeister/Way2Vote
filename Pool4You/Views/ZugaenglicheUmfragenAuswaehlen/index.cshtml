@model IEnumerable<Pool4You.Data.Umfrage>

@{
    ViewBag.Title = "Übersicht öffentlicher Umfragen";
}

<h2>Übersicht öffentlicher Umfragen</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Beschreibung)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start_Termin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.End_Termin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUsers.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Beschreibung)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Start_Termin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.End_Termin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
        </td>
        <td>
            @Html.ActionLink("Teilnehmen", "Teilnehmen", new { id = item.Id })
             
            @Html.ActionLink("Löschen", "Loeschen", "UmfragenVerwalten", new { id = item.Id }, null)
        </td>
    </tr>
}
    <div>
        <br />
        @Html.ActionLink("Neue Umfrage erstellen", "../UmfragenVerwalten/Erstellen")
    </div>

</table>
